<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/select_service_image"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:src="@drawable/alice" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/select_service_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/select_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alice&apos;s phone"
            android:textColor="@color/support_gray_more"
            android:textSize="14sp" />

        <TextView
             android:id="@+id/select_service_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07785460399"
            android:textColor="@color/support_gray_more"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/search_selector_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/search_selector" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray_line" />

</RelativeLayout>