<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/chat_left_bg"
    android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp" >
      
        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
		            android:id="@+id/send_name"
		            android:layout_alignParentTop="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="22133"
		            android:layout_marginLeft="5dp"
		            android:textColor="#b6b6b6"
		            android:textSize="12sp" />
            <TextView
                android:id="@+id/at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/send_name"
                android:text="at"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textColor="#b6b6b6"
                android:textSize="12sp"
                 />
              <TextView
		            android:id="@+id/message_time"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="12-20 17:32"
		            android:layout_toRightOf="@id/at"
		            android:textColor="#b6b6b6"
		            android:textSize="12sp" />

            <ImageView
                android:id="@+id/fail_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/message_content"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:background="@drawable/fail_send" />

            <TextView
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_name"
                android:layout_toRightOf="@+id/send_icon"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="1212"
                android:textColor="@color/white"
                android:textSize="14sp"
                 />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>