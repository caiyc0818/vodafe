                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-3dp"
                                    android:gravity="center"
                                    android:text="0.0"
                                    android:textColor="@color/white"
                                    android:textSize="32sp"
                                    android:textStyle="bold" />

