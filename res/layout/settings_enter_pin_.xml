<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/settings_setup_pin" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="45dp"
            android:text="@string/settings_setup_pin_enter_pin"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="wrap_content"
            android:layout_height="275dp"
            android:layout_below="@+id/title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/settings_resetpin"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="25dp" >

            <LinearLayout
                android:id="@+id/erron_tips"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:background="@drawable/set_up_pin"
                android:orientation="horizontal"
             >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/settings_setup_pin_tips" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/settings_setup_pin_confirm_tips"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            
              <LinearLayout
                android:id="@+id/erron_tips2"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible"
                android:background="@drawable/set_up_pin"
                android:orientation="horizontal"
             >

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="10dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="5dp"
                      android:scaleType="centerCrop"
                      android:src="@drawable/settings_setup_pin_tips" />

                <TextView
                    android:id="@+id/erron_tips2_text"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_setup_pin_confirm_tips2"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/edit1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                     android:focusable="true"
        android:focusableInTouchMode="true"
                    android:background="@drawable/settings_reset_pin_edit"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:password="true" />

                <EditText
                    android:id="@+id/edit2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/settings_reset_pin_edit"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:password="true" />

                <EditText
                    android:id="@+id/edit3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/settings_reset_pin_edit"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:password="true" />

                <EditText
                    android:id="@+id/edit4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/settings_reset_pin_edit"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="1"
                    android:password="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/pin_con"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/settings_resetpin_back1"
                android:gravity="center"
                android:text="@string/settings_reset_pin_continue"
                 />

            <TextView
                android:id="@+id/go_reset"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/settings_resetpin_back2"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/settings_reset_pin_Forgotten" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>